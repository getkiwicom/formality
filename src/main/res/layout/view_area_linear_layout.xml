<com.roxbyte.formality.view.linear.LabelLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:duplicateParentState="true"
    android:background="?android:attr/selectableItemBackground"
    android:padding="10dp"
    style="@style/LayoutLinearFit">

    <com.roxbyte.formality.view.text.DefaultTextView
        android:id="@+id/text_area_title"
        android:textColor="@android:color/black"
        android:visibility="gone"
        style="@style/LayoutTextViewMatch" />

    <com.roxbyte.formality.view.text.DefaultTextView
        android:id="@+id/text_area_description"
        android:text="Description"
        android:textSize="12sp"
        android:visibility="gone"
        style="@style/LayoutTextViewMatch" />

</com.roxbyte.formality.view.linear.LabelLinearLayout>